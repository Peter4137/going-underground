{
  "compilerOptions": {
    /* Basic Options */
    "skipLibCheck": true,
    "target": "es2022",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    /* Module Resolution */
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2022", "dom", "dom.iterable"],
  }
}
